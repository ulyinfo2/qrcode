<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>QR Code Decryptor</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: auto;
      padding: 20px;
      background: #f8f9fa;
    }
    input, button, textarea {
      width: 100%;
      margin-top: 10px;
      padding: 10px;
      font-size: 16px;
    }
    button {
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
    #output {
      white-space: pre-wrap;
      background: #e9ecef;
      padding: 15px;
      margin-top: 20px;
      border-left: 5px solid #007bff;
    }
  </style>
</head>
<body>

  <h2>üîê QR Code Decryptor (AES-256-CBC, PBKDF2)</h2>

  <label for="base64">üìã Paste Base64 Text from QR Code:</label>
  <textarea id="base64" rows="8" placeholder="Paste base64-encoded encrypted message from the QR code here..."></textarea>

  <label for="password">üîë Enter Password:</label>
  <input type="password" id="password" placeholder="Enter the password used during encryption">

  <button onclick="decrypt()">üîì Decrypt</button>

  <div id="output"></div>

  <!-- ‚úÖ Load CryptoJS from reliable CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"
    integrity="sha512-GhFV/98H9Af8PLjlTStM7zCQDbLtXj2q7Uv8oC7A4EqV7RfBd7wDJUE7J2H+lqWCPGaq+GGxS+W/m1HCP2esTg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>
    function decrypt() {
      const b64 = document.getElementById("base64").value.trim();
      const password = document.getElementById("password").value;
      const output = document.getElementById("output");

      if (!b64 || !password) {
        output.innerText = "‚ùó Please enter both the base64 string and password.";
        return;
      }

      try {
        const encryptedWords = CryptoJS.enc.Base64.parse(b64);
        const encryptedHex = encryptedWords.toString(CryptoJS.enc.Hex);
        const saltedHeader = encryptedHex.slice(0, 16);

        let salt, ciphertext;

        if (saltedHeader === "53616c7465645f5f") {  // "Salted__" in hex
          salt = CryptoJS.enc.Hex.parse(encryptedHex.slice(16, 32));
          ciphertext = CryptoJS.enc.Hex.parse(encryptedHex.slice(32));
        } else {
          output.innerText = "‚ùå Encrypted data does not start with 'Salted__' ‚Äî not OpenSSL-compatible.";
          return;
        }

        const keySize = 32;
        const ivSize = 16;
        const iterations = 100000;

        const keyAndIV = CryptoJS.PBKDF2(password, salt, {
          keySize: (keySize + ivSize) / 4,
          iterations: iterations,
          hasher: CryptoJS.algo.SHA256
        });

        const key = CryptoJS.lib.WordArray.create(keyAndIV.words.slice(0, keySize / 4));
        const iv = CryptoJS.lib.WordArray.create(keyAndIV.words.slice(keySize / 4));

        const decrypted = CryptoJS.AES.decrypt(
          { ciphertext: ciphertext },
          key,
          { iv: iv, mode: CryptoJS.mode.CBC, padding: CryptoJS.pad.Pkcs7 }
        );

        const plaintext = decrypted.toString(CryptoJS.enc.Utf8);

        if (plaintext) {
          output.innerText = "‚úÖ Decrypted Message:\n\n" + plaintext;
        } else {
          output.innerText = "‚ùå Decryption failed. The password may be incorrect.";
        }

      } catch (e) {
        output.innerText = "‚ùå Error: " + e.message;
      }
    }
  </script>

</body>
</html>
